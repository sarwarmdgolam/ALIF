@model SCML.Models.EmailFormModel
@{
    ViewBag.Title = "Send your CV/Resume";
}
<div class="modal-body">
    <div class="package-header yellow-bg">
        <h5>@ViewBag.Title</h5>
    </div>
    <br />
    <br />
    @using (Html.BeginForm("SendResume", "Partial", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
    <div class="row">
        <div class="form-group">
            @Html.LabelFor(m => m.full_name, new { @class = "col-md-4 control-label" })
            <div class="col-md-8">
                @Html.TextBoxFor(m => m.full_name, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.full_name)
                @Html.ValidationMessageFor(m => m.full_name, null, new { @class = "field-validation-error", data_valmsg_for = "FullName" })
            </div>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="form-group">
            @Html.LabelFor(m => m.applied_for, new { @class = "col-md-4 control-label" })
            <div class="col-md-8">
                @Html.TextBoxFor(m => m.applied_for, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.applied_for)
            </div>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="form-group">
            @Html.LabelFor(m => m.email, new { @class = "col-md-4 control-label" })
            <div class="col-md-8">
                @Html.TextBoxFor(m => m.email, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.email)
            </div>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="form-group">
            @Html.LabelFor(m => m.Upload, new { @class = "col-md-4 control-label" })
            
            <div class="col-md-8">
                <input type="file" name="upload" id="file1" size="4096" accept=".pdf , .doc, .docx" />
                <span>Max 4MB</span>
            </div>
        </div>
    </div>
    <br />
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <button type="button" class="btn btn-default"
                        data-dismiss="modal">
                    Cancel
                </button>
                <button type="submit" id="approve-btn"
                        class="btn btn-danger">
                    Submit
                </button>
            </div>
        </div>
    }
</div>
<script type="text/javascript">
    $(function () {
        $('#approve-btn').click(function () {
            $('#modal-container').modal('hide');
        });
    });
</script>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}



