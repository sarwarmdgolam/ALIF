@using Microsoft.AspNet.Identity

<nav class="navbar-collapse collapse" role="navigation" id="bs-navbar-collapse">
    <div class="icon-top golden-text text-right" style="font-size:30px; padding:10px 0 0 10px">
        <a href="http://portal.office.com" title="Web Mail"><i class="icon-email-mail-streamline"></i></a>
        <a href="/account/login" title="Login" style="font-size:20px; margin-top:-20px"><i class="icon-man-people-streamline-user"></i></a>
    </div>
    <div class="collapse navbar-collapse">
        <ul class="nav navbar-nav navbar-right">
            <li class="scroll active"><a href="#home">Home</a></li>
            <li class="scroll"><a href="#explore">About Us</a></li>
            <li class="scroll"><a href="#event">Boards</a></li>
            <li class="scroll"><a href="#about">Management</a></li>
            <li class="no-scroll"><a href="#twitter">Research</a></li>
            <li><a class="no-scroll" href="#" target="_blank">Career</a></li>
            <li class="scroll"><a href="#contact">Contact</a></li>
            <!-- Admin Menu-->
            @if (Request.IsAuthenticated)
            {
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        Admin <b class="caret"></b>
                    </a>
                    <ul class="dropdown-menu">
                        <li>@Html.ActionLink("Content Types", "Index", "Types")</li>
                        <li>@Html.ActionLink("Contents", "Index", "Contents")</li>
                        <li>@Html.ActionLink("Uploaded CV", "Index", "UploadCV")</li>
                        <li>@Html.ActionLink("Job", "Index", "JobDetails")</li>
                        <li><hr></li>
                        <li>
                            @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                            {
                                @Html.AntiForgeryToken()
                                <a href="javascript:document.getElementById('logoutForm').submit()" style="padding-left:21px;">Log off</a>
                            }
                        </li>
                    </ul>
                </li>
            }
        </ul>
    </div>

</nav>

