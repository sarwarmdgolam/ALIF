@model IEnumerable<SCML.Models.JobDetail>

@{
    ViewBag.Title = "Current Openings";
}

@if (Model == null || Model.Count() == 0)
{
    <p class="text-justify"><b style="color: #ac9121;">Sorry!!! No Jobs Available Now</b> </p>
}
else
{
    foreach (var item in Model)
    {
        <table class="table-condensed">
            <tbody>
                <tr>
                    <td>Job Title:</td>
                    <td>@item.title</td>
                </tr>
                <tr>
                    <td>Job Details:</td>
                    <td>@item.details</td>
                </tr>

                <tr>
                    <td>Qualification</td>
                    <td>@item.qualification</td>
                </tr>
                <tr>
                    <td>Experience</td>
                    <td>@item.experience</td>
                </tr>
                <tr>
                    <td></td>
                    <td>@Html.ActionLink("Apply", "viewsendresume", "Partial", null, new { @class = "modal-link btn btn-success" })</td>
                </tr>
            </tbody>
        </table>
        <br />
    }

}


